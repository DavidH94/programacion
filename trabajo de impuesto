#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;


int main()
{float sueldo,sueldobase,impuesto;
cout<<"ingrese el sueldo\n:";
cin>>sueldo;
cout<<"ingrese el sueldobase\n:";
cin>>sueldobase;
if(sueldo>sueldobase*2)
impuesto=sueldo*0.13;
else impuesto=0;
cout<<"el impuesto a pagar es:";
cout<<impuesto;
getch();
return 0;
}
